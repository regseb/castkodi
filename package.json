{
    "name": "castkodi",
    "version": "5.10.0",
    "description": "WebExtension pour diffuser des vidéos / musiques sur Kodi.",
    "keywords": [
        "cast",
        "kodi",
        "webextension",
        "firefox",
        "youtube",
        "twitch",
        "vimeo",
        "soundcloud"
    ],
    "homepage": "https://addons.mozilla.org/addon/castkodi/",
    "bugs": {
        "url": "https://github.com/regseb/castkodi/issues"
    },
    "license": "EUPL-1.2",
    "author": "Sébastien Règne <regseb@gmail.com> (https://github.com/regseb)",
    "funding": "https://www.paypal.me/sebastienregne",
    "repository": "regseb/castkodi",
    "type": "module",
    "scripts": {
        "postinstall": "node .script/sync.js",
        "lint": "metalint",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "c8 mocha -r test/polyfill.js test/unit/",
        "test:integration": "mocha -r test/polyfill.js test/integration/",
        "coverage:html": "c8 report --reporter html",
        "coverage:lcov": "c8 report --reporter lcovonly",
        "jsdocs": "jsdoc -r -a all -d jsdocs/ src/",
        "start": "web-ext run -s src/",
        "build": "web-ext build -s src/ -a build/ -o",
        "release": "standard-version",
        "clean": "node .script/clean.js"
    },
    "dependencies": {
        "dialog-polyfill": "0.5.6"
    },
    "devDependencies": {
        "@babel/core": "^7.13.14",
        "@babel/eslint-parser": "^7.13.14",
        "@babel/eslint-plugin": "^7.13.10",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-syntax-top-level-await": "^7.12.13",
        "abort-controller": "^3.0.0",
        "addons-linter": "^3.1.0",
        "c8": "^7.7.0",
        "david": "^12.0.0",
        "eslint": "^7.23.0",
        "eslint-plugin-filenames": "^1.3.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^32.3.0",
        "eslint-plugin-mocha": "^8.1.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-unicorn": "^29.0.0",
        "event-target-shim": "^6.0.2",
        "htmlhint": "^0.14.2",
        "jsdoc": "^3.6.6",
        "jsdom": "^16.5.2",
        "jsonlint-mod": "^1.7.6",
        "markdownlint": "^0.23.1",
        "metalint": "^0.9.0",
        "mocha": "^8.3.2",
        "mock-socket": "^9.0.3",
        "node-fetch": "^2.6.1",
        "purgecss": "^4.0.3",
        "sinon": "^10.0.0",
        "standard-version": "^9.1.1",
        "string.prototype.replaceall": "^1.0.5",
        "stylelint": "^13.12.0",
        "stylelint-order": "^4.1.0",
        "web-ext": "^6.0.0",
        "yaml-lint": "^1.2.4"
    },
    "engines": {
        "node": ">=14.13.0"
    }
}
